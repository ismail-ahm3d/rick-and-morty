<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMorty" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/card_background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/background</item>
        <!-- Customize your theme here. -->

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MainOverText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white_700</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CharacterName" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white_400</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailCharacterName" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white_400</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailCharacterNameExpanded" parent="DetailCharacterName">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">32</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailCharacterDetails" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white_200</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Status" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white_700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Species" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white_700</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>