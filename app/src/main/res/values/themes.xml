<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/logoTextColor</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainOverText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white_700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CharacterName" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white_400</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Status" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white_700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Species" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white_700</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>